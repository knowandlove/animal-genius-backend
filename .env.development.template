# Development Environment Variables Template
# Copy this to .env and replace with your actual values
# NEVER commit the .env file with real credentials!

# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# Get this from your Supabase project settings
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Authentication
# Generate a secure random string (use: openssl rand -base64 32)
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"
SUPABASE_SERVICE_KEY="your-service-key-here"

# Optional: Cloudflare for custom domain
CLOUDFLARE_ZONE="your-domain.com"

# Feature Flags
USE_CLOUD_STORAGE=true

# Payment Webhook Secret (for production)
WEBHOOK_SECRET="your-webhook-secret-here"